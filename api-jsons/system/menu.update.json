{
    "id":"console.menu.update",
    "name":"修改菜单",
    "description":"菜单修改",
    "namespace":"Kuga\\Service\\ApiV3\\Console",
    "path":"./ApiV3/Console",
    "method":"system.updateMenu",
    "accessLevel": 1,
    "request":[
        {
            "param":"id",
            "required":true,
            "default":"",
            "type":"String",
            "description":"菜单ID，以这个为依据来更新菜单"
        },{
            "param":"name",
            "required":true,
            "default":"",
            "type":"String",
            "description":"菜单名"
        },
        {
            "param":"parentId",
            "required":false,
            "default":0,
            "type":"Integer",
            "description":"父级菜单ID"
        },
        {
            "param":"controller",
            "required":true,
            "default":"",
            "type":"String",
            "description":"controller名"
        },
        {
            "param":"action",
            "required":true,
            "default":"",
            "type":"String",
            "description":"action名"
        },
        {
            "param":"parameter",
            "required":false,
            "default":"",
            "type":"String",
            "description":"参数"
        },
        {
            "param":"display",
            "required":false,
            "default":"1",
            "type":"Integer",
            "description":"是否显示"
        },
        {
            "param":"sortByWeight",
            "required":false,
            "default":"0",
            "type":"Integer",
            "description":"显示权重"
        },
        {
            "param":"className",
            "required":false,
            "default":"",
            "type":"String",
            "description":"图标样式名"
        }
    ],
    "response":{
        "data":{
            "type":"Boolean",
            "sample":true,
            "description":"成功返回true，失败返回false"
        }
    }
}